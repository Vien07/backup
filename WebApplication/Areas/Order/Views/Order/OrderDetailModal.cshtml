@using DTO;
@using CMS.Services.TranslateServices;
@inject ITranslateServices _translate
@{

}

<input hidden class="form-control raw"
       id="CardPid"
       name="CardPid"
       placeholder="CardPid"
       value=""
       required
       type="text" />
<div class="rowForm">
    <div class="images__wrapper">
        <div class="images__main">
            <div id="imgPicThumbCard" style="background-image: url('/b-admin/dist/img/avatar3.jpg');" class="avatar"></div>
            <div class="form-group form-InputFile">
                <label class="tt-label">@_translate.GetStringAdmin("label.avatar")</label>
                <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                    <div id="imgPicThumbFileName" class="d-none form-control text-truncate" data-trigger="fileinput">
                        <i class="glyphicon glyphicon-file fileinput-exists"></i>
                        <span class="fileinput-filename"></span>
                    </div>
                    <span class="input-group-append">
                        <span class="btn btn-primary btn-file">
                            <span class="fileinput-new">@_translate.GetStringAdmin("label.choose-file")</span>
                            <span class="fileinput-exists">@_translate.GetStringAdmin("label.change")</span>
                            <input id="Avatar" onchange="readURL(this,'#imgPicThumbCard',0);" type="file" name="Images"  accept=".jpg, .jpeg, .png" />
                        </span>
                        <a role="button"
                           href="#"
                           onclick="ClearImages('#imgPicThumbCard')"
                           class="btn btn-secondary fileinput-exists"
                           data-dismiss="fileinput">@_translate.GetStringAdmin("label.delete")</a>
                    </span>
                </div>
                <small class="form-text text-muted">
                    @_translate.GetStringAdmin("label.format-images") (.gif, .png, .jpg, .jpeg)
                </small>
            </div>
        </div>
        <div id="QrBox" class="images__main mt-3 d-none">
            <label for="imgQrImage" class="tt-label">@_translate.GetStringAdmin("label.qr-image")</label>
            <div id="imgQrImage" style="background-image: url('/b-admin/dist/img/avatar3.jpg');" class="avatar"></div>
            <h4 class="form-text bold text-primary text-center w-100">
                QR code
            </h4>
        </div>
    </div>
    <div class="group-info">
        <div id="CardInfo" class="row">
            <!-- Tiêu đề -->
            <div class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">Tên người dùng</label>
                    <input class="form-control raw"
                           id="FullNameCard"
                           name="FullName"
                           placeholder="Nhập họ và tên"
                           value=""
                           required
                           type="text" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">Url</label>
                    <input class="form-control raw"
                           id="Url"
                           name="Url"
                           placeholder="nguyen-van-a (không nhập ký tự đặc biệt)"
                           value=""
                           required
                           type="text" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">Chức danh</label>
                    <input class="form-control raw"
                           id="Position"
                           name="Position"
                           placeholder="Chức danh"
                           value=""
                           required
                           type="text" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">SDT cá nhân</label>
                    <input class="form-control raw"
                           id="PersonalPhone"
                           name="PersonalPhone"
                           placeholder="02873006461"
                           value=""
                           pattern="(\+?\d{1,4}[-.\s]?)?(\(?\d{1,4}\)?[-.\s]?)?(\d{3,4}[-.\s]?\d{4,7})"
                           type="tel" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">SDT bàn</label>
                    <input class="form-control raw"
                           id="HomePhone"
                           name="HomePhone"
                           placeholder="1900 6019"
                           value=""
                           pattern="(\+?\d{1,4}[-.\s]?)?(\(?\d{1,4}\)?[-.\s]?)?(\d{3,4}[-.\s]?\d{4,7})"
                           type="tel" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">SDT công việc</label>
                    <input class="form-control raw"
                           id="CompanyPhone"
                           name="CompanyPhone"
                           placeholder="02873006461"
                           value=""
                           pattern="(\+?\d{1,4}[-.\s]?)?(\(?\d{1,4}\)?[-.\s]?)?(\d{3,4}[-.\s]?\d{4,7})"
                           type="tel" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">Email cá nhân</label>
                    <input class="form-control raw"
                           id="PersonalEmail"
                           name="PersonalEmail"
                           placeholder="Email cá nhân"
                           value=""
                           type="text" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">Email công việc</label>
                    <input class="form-control raw"
                           id="WorkEmail"
                           name="WorkEmail"
                           placeholder="Email công việc"
                           value=""
                           type="text" />
                </div>
            </div>
            <div hidden class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">Link cá nhân</label>
                    <input class="form-control raw"
                           id="PersonalLink"
                           name="PersonalLink"
                           placeholder="Link cá nhân"
                           value=""
                           type="text" />
                </div>
            </div>
            <div hidden class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">Website công ty</label>
                    <input class="form-control raw"
                           id="CompanyWebsiteLink"
                           name="CompanyWebsiteLink"
                           placeholder="Link cá nhân"
                           value=""
                           type="text" />
                </div>
            </div>
            <div hidden class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">Website cá nhân</label>
                    <input class="form-control raw"
                           id="PersonalWebsiteLink"
                           name="PersonalWebsiteLink"
                           placeholder="Website cá nhân"
                           value=""
                           type="text" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">Telegram</label>
                    <input class="form-control raw"
                           id="Telegram"
                           name="Telegram"
                           placeholder="0372064898"
                           value=""
                           type="text" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">WhatsApp</label>
                    <input class="form-control raw"
                           id="WhatsApp"
                           name="WhatsApp"
                           placeholder="+84372064898"
                           value=""
                           type="text" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">Viber</label>
                    <input class="form-control raw"
                           id="Viber"
                           name="Viber"
                           placeholder="+84372064898"
                           value=""
                           type="text" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">Skype</label>
                    <input class="form-control raw"
                           id="Skype"
                           name="Skype"
                           placeholder="live:.cid.9b5e4e3cff16d106"
                           value=""
                           type="text" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">Zalo</label>
                    <input class="form-control raw"
                           id="Zalo"
                           name="Zalo"
                           placeholder="0372064898"
                           value=""
                           type="text" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">LinkedIn</label>
                    <input class="form-control raw"
                           id="LinkedIn"
                           name="LinkedIn"
                           placeholder="LinkedIn"
                           value=""
                           type="text" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">Facebook</label>
                    <input class="form-control raw"
                           id="Facebook"
                           name="Facebook"
                           placeholder="Facebook"
                           value=""
                           type="text" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label class="tt-label">X</label>
                    <input class="form-control raw"
                           id="Twitter"
                           name="Twitter"
                           placeholder="X"
                           value=""
                           type="text" />
                </div>
            </div>

            <!-- Editor -->

        </div>
        <div id="CardCustomLinks" class="row">
            <div class="col-12 mb-3">
                <button onclick="addCustomLinkInput()" type="button" class="btn btn-primary" id="addLinkButton">Thêm Link</button>
            </div>
        </div>
    </div>
</div>

