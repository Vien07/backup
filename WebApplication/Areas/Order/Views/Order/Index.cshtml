                        success: function (response) {
                            if (response.isError) {
                                AlertToast('Thông báo', "Thành công", "success")
                                Search(0)
                            }
                            else {
                                SweetAlert('Thông báo', "Thất bại", 'error')
                            }
                        },
                        error: function (e) {
                            console.error(e)
                        }
                    })
                }
            })
        }

        function ChangeIsPayment(pid, status) {
            Swal.fire({
                title: 'Bạn có muốn đổi trạng thái thanh toán?',
                text: "",
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Đồng ý'
            }).then((result) => {
                if (result.value) {
                    var listPid = pid;
                    if (pid == 0) {
                        listPid = GetListItemChecked("Chk");

                    }

                    $.ajax({
                        url: actionUrl + 'ChangeIsPayment',
                        method: 'POST',
                        data: {
                            Pid: listPid,
                            value: status
                        },
                        success: function (response) {
                            if (response.isError) {
                                AlertToast('Thông báo', "Thành công", "success")
                                Search(0)
                            }
                            else {
                                SweetAlert('Thông báo', "Thất bại", 'error')
                            }
                        },
                        error: function (e) {
                            console.error(e)
                        }
                    })
                }
            })
        }

        const showLoading = function (time) {
            swal({
                title: 'Now loading',
                allowEscapeKey: false,
                allowOutsideClick: false,
                timer: time,
                onOpen: () => {
                    swal.showLoading();
                }
            }).then(
                () => { },
                (dismiss) => {
                    if (dismiss === 'timer') {
                        //console.log('closed by timer!!!!');
                        swal({
                            title: 'Finished!',
                            type: 'success',
                            timer: 2000,
                            showConfirmButton: false
                        })
                    }
                }
            )
        };

        function sendMail(pid) {
            Swal.fire({
                title: 'Bạn có gửi mail xác nhận những đơn hàng này?',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Đồng ý'
            }).then((result) => {
                if (result.value) {

                    swal({
                        title: 'Sending...Please wait!',
                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        //timer: 2000,
                        onOpen: () => {
                            swal.showLoading();
                        }
                    })

                    var listPid = pid;
                    if (pid == 0) {
                        listPid = GetListItemChecked("Chk");

                    }

                    $.ajax({
                        url: actionUrl + 'SendMail',
                        method: 'POST',
                        data: { Pid: listPid, },
                        success: function (response) {
                            swal.hideLoading()
                            if (response.isError) {
                                AlertToast('Thông báo', "Thành công", "success")
                            }
                            else {
                                SweetAlert('Thông báo', "Thất bại", 'error')
                            }
                        },
                        error: function (e) {
                            swal.hideLoading()
                            console.error(e)
                        }
                    })
                }
            })
        }

        function exportVAT(pid) {
            Swal.fire({
                title: 'Bạn xuất VAT và có gửi mail đến khách hàng không?',
                showCancelButton: true,
                confirmButtonText: 'Có gửi mail',
            }).then((result) => {
                if (result.value) {
                    swal({
                        title: 'Please wait!...',
                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        //timer: 2000,
                        onOpen: () => {
                            swal.showLoading();
                        }
                    })

                    var listPid = pid;
                    if (pid == 0) {
                        listPid = GetListItemChecked("Chk");

                    }

                    $.ajax({
                        url: actionUrl + 'ExportVAT',
                        method: 'POST',
                        data: { Pid: listPid, isSendMail: result.value },
                        success: function (response) {
                            swal.hideLoading()
                            if (response.isError) {

                                var element = document.createElement('a');
                                element.setAttribute('href', '/docs/vat.zip');
                                element.setAttribute('download', "");

                                element.style.display = 'none';
                                document.body.appendChild(element);

                                element.click();

                                document.body.removeChild(element);

                                AlertToast('Thông báo', "Thành công", "success")
                            }
                            else {
                                SweetAlert('Thông báo', "Thất bại", 'error')
                            }
                        },
                        error: function (e) {
                            swal.hideLoading()
                            console.error(e)
                        }
                    })
                }

            })
        }
    </script>
