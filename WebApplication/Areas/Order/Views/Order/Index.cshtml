            }).then((result) => {
                if (result.value) {
                    var listPid = pid;
                    if (pid == 0) {
                        listPid = GetListItemChecked("Chk");

                    }

                    $.ajax({
                        url: actionUrl + 'ChangePaymentMethod',
                        method: 'POST',
