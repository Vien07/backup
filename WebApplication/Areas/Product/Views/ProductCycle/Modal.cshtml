@using DTO;
@using CMS.Services.TranslateServices;
@inject ITranslateServices _translate
@{
    bool haveImage = false;
    bool haveMultiLevel = false;
}

@if (haveImage)
{
    <div class="rowForm">
        <div class="images__wrapper">
            <div class="images__main">
                <div id="imgPicThumb" style="background-image: url('/b-admin/dist/img/avatar3.jpg');" class="avatar"></div>
                <div class="form-group form-InputFile">
                    <label class="tt-label">@_translate.GetStringAdmin("label.avatar")</label>
                    <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                        <div id="imgPicThumbFileName" class="d-none form-control text-truncate" data-trigger="fileinput">
                            <i class="glyphicon glyphicon-file fileinput-exists"></i>
                            <span class="fileinput-filename"></span>
                        </div>
                        <span class="input-group-append">
                            <span class="btn btn-primary btn-file">
                                <span class="fileinput-new">@_translate.GetStringAdmin("label.choose-file")</span>
                                <span class="fileinput-exists">@_translate.GetStringAdmin("label.change")</span>
                                <input onchange="readURL(this,'#imgPicThumb',0);" type="file" name="Images" />
                            </span>
                            <a role="button"
                               href="#"
                               onclick="ClearImages('#imgPicThumb')"
                               class="btn btn-secondary fileinput-exists"
                               data-dismiss="fileinput">@_translate.GetStringAdmin("label.delete")</a>
                        </span>
                    </div>
                    <small class="form-text text-muted">
                        @_translate.GetStringAdmin("label.format-images") (.gif, .png, .jpg, .jpeg)
                    </small>
                </div>
            </div>
        </div>
        <div class="group-info">
            <div class="row">
                <!-- Tiêu đề -->
                <div class="col-12 @(haveMultiLevel ? "col-md-6 pr-md-1" : "")">
                    <div class="form-group mb-3">
                        <label class="tt-label">Tên chu kỳ</label>
                        <input class="form-control raw"
                               id="Name"
                               name="Name"
                               placeholder="Nhập tên chu kỳ"
                               value=""
                               required
                               type="text" />
                    </div>
                </div>
                @if (haveMultiLevel)
                {
                    <!-- Form-select / Form-control -->
                    <div class="col-12 col-md-6 pl-md-1">
                        <div class="form-group">
                            <label class="tt-label">Danh mục cha</label>
                            <select id="ParentId" onchange="SaveRawData()" class="form-control">
                            </select>
                        </div>
                    </div>
                }
                <!-- Editor -->
                <div class="col-12">
                    <div class="form-group mb-3">
                        <label class="tt-label">Mô tả ngắn</label>
                        <textarea class="form-control raw"
                                  id="Description"
                                  name="Description"
                                  placeholder="Nhập mô tả"
                                  value=""
                                  type="text"
                                  rows="5"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <!-- Tiêu đề -->
        <div class="col-6 @(haveMultiLevel ? "col-md-6 pr-md-1" : "")">
            <div class="form-group mb-3">
                <label class="tt-label">Tên chu kỳ</label>
                <input class="form-control raw"
                       id="Name"
                       name="Name"
                       placeholder="Nhập tên chu kỳ"
                       value=""
                       required
                       type="text" />
            </div>
        </div>
        <div class="col-6">
            <div class=" form-group mb-3">
                <label class="tt-label">Số tháng</label>
                <input class="form-control raw"
                       id="Months"
                       name="Months"
                       placeholder="Nhập số tháng"
                       value=""
                       required
                       type="number" />
            </div>
        </div>
        <!-- Form-select / Form-control -->
        <div @(!haveMultiLevel ? "hidden" : "") class="col-12 col-md-6 pl-md-1">
            <div class="form-group">
                <label class="tt-label">Danh mục cha</label>
                <select id="ParentId" onchange="SaveRawData()" class="form-control">
                </select>
            </div>
        </div>
        <!-- Editor -->
        <div class="col-12">
            <div class="form-group mb-3">
                <label class="tt-label">Mô tả ngắn</label>
                <textarea class="form-control raw"
                          id="Description"
                          name="Description"
                          placeholder="Nhập mô tả"
                          value=""
                          type="text"
                          rows="5"></textarea>
            </div>
        </div>

    </div>
}
