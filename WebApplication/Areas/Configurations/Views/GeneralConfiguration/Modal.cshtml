@using CMS.Services.TranslateServices;
@using CmsModels;
@inject ITranslateServices _translate

<div class="row">
    <div class="col-md-12 form-group">
        <label class="mb-1 text-primary" for="Title">@_translate.GetStringAdmin("label.title")</label>
        <input class="form-control raw" id="Title" name="Title" placeholder="@_translate.GetStringAdmin("placeholder.title")" value="" type="text">
    </div>
</div>

<div class="row">
    <div class="col-md-12 form-group">
        <label class="mb-1 text-primary" for="Title">@_translate.GetStringAdmin("label.subject")</label>
        <input class="form-control raw" id="Subject" name="Subject" placeholder="Subject" onclick="cursor.Id = this.id;cursor.Type = 'input';" value="" type="text">
    </div>
</div>
<div class="row">
    <div class="col-md-12 form-group">
        <label class="mb-1 text-primary" for="Title">@_translate.GetStringAdmin("label.from-name")</label>
        <input class="form-control raw" id="FromName" name="FromName" placeholder="{{FromName}}" onclick="cursor.Id = this.id;cursor.Type = 'input';" value="" type="text">
    </div>
</div>

<div class="form-group ">
    <label class="mb-1 text-primary" for="Content">@_translate.GetStringAdmin("label.content")</label>
    <textarea id="Content"></textarea>
</div>




