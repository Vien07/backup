extends template/template
block vars
	- title= 'Sách nói'
	- wrapperClass = ''
	- menuActive = ''
	- homeSlider = false
	- bannerAll = false
	- breadcrumb = true
	- navigate = true

block breadcrumb 
	+breadcrumb('container', {'products.html':'Sản phẩm'})
block mainer
	main.mainer
		section.container
			.heading-section.d-flex
				.tt-wrap
					h1.tt-sm=title
					.desc Here are the greatest audiobooks for your listening pleasure
				.action 
					select.form-select.right
						option(disabled selected) Sắp xếp theo
						option Mới nhất
						option Cũ nhất
						option Xem nhiều
			.row.row-cols-2.row-cols-md-5.g-3.g-lg-4.list-products
				+list_products('col mb-3 wow fadeInUp', '1.jpg', '2.jpg', '3.jpg', '4.jpg', '5.jpg')
				+list_products('col mb-3 wow fadeInUp', '6.jpg', '7.jpg', '8.jpg', '9.jpg', '10.jpg')
				+list_products('col mb-3 wow fadeInUp', '11.jpg', '12.jpg', '13.jpg', '14.jpg', '15.jpg')
				+list_products('col mb-3 wow fadeInUp', '1.jpg', '2.jpg', '3.jpg', '4.jpg', '5.jpg')
			+pagination('my-45')
			.pb-1