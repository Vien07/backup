block mixins
    include ../mixins/mixins
block vars
    - title = ''
    - wrapperClass = ''
    - homeSlider = true
    - bannerAll = false
    - menuActive = ''
    - breadcrumb = false
    - login = false
    - navigate = true
    

doctype html
html
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title=title
        link(rel="shortcut icon" href="favicon.png")
        link(href="css/library.min.css" rel="stylesheet")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.3/jquery.min.js")
    body
        .preloader
            .shape
            .shape
            .preloader-in: img(src="css/skin/logo.png" alt="Loading...")
        .wrapper(class=wrapperClass)
            .page-bg
            block header
                include ../layout/header
            block layers
                if bannerAll
                    include ../layout/banner-all
                if homeSlider
                    include ../layout/flickity-home-slider
            if breadcrumb
                block breadcrumb 
                    //- +breadcrumb({'about.html':'Giới thiệu'})
            block mainer
                //- content here
            block footer
                include ../layout/footer
            block feedback 
                include ../feedback
            //- block social
                include ../layout/social
            block scripts 
                include ../layout/scripts