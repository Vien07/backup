                                            <span class="fa fa-dollar-sign"></span>@Html.Raw(_translate.GetString("label.salary"))
                                        </div>
                                        <div class="desc">
                                            @Html.Raw(data.Salary)
                                        </div>
                                    </div>
                                }
                                @if (data.Exp != "")
                                {
                                    <div class="col">
                                        <div class="picon">
                                            <span class="fa fa-briefcase"></span>@Html.Raw(_translate.GetString("label.exp"))
