        function HighlightMenu() {
            var currentPath = window.location.pathname.replace("/s-admin", "");
            var arrCurrentPath = currentPath.split('/')
            var arrCurrentPathSelected = arrCurrentPath[1]
            if (arrCurrentPath.length >= 4) {
                if (arrCurrentPath[2] != "Edit" || arrCurrentPath.length == 5) {
                    arrCurrentPathSelected += `_${arrCurrentPath[3]}`;

                }
            }
            $("#layout-menu a").each(function () {
                var menuItemUrl = $(this).attr("menu");
                if (menuItemUrl == arrCurrentPathSelected) {

                    if ($(this).closest("li.menu-item").length > 0) {
                        console.log($(this).closest("li.menu-item"))

                        $(this).closest("li.menu-item").addClass("active");
                        $(this).parents("li.menu-item").addClass("active open");



                    } else {
                        $(this).parents("li.menu-item").addClass("active");
                    }
                }
            });
        }
    </script>
