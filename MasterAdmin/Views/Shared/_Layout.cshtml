    <script>
        function CreateAvatar(divID) {
            var name = $("#userName")[0].innerText;

            var colours = ["#1abc9c", "#2ecc71", "#3498db", "#9b59b6", "#34495e", "#16a085", "#27ae60", "#2980b9", "#8e44ad", "#2c3e50", "#f1c40f", "#e67e22", "#e74c3c", "#95a5a6", "#f39c12", "#d35400", "#c0392b", "#bdc3c7", "#7f8c8d"];

            var nameSplit = name.split(" ");
            var initials;

            if (nameSplit.length < 2) {
                initials = name.charAt(0).toUpperCase() + name.charAt(1).toUpperCase();
            } else {
                initials = nameSplit[0].charAt(0).toUpperCase() + nameSplit[1].charAt(0).toUpperCase();
            }

            var charIndex = initials.charCodeAt(0) - 65;
            var colourIndex = charIndex % 19;

            var canvas = document.getElementById(divID);
            var context = canvas.getContext("2d");

            // Set the canvas dimensions with higher pixel density
            var canvasSize = 40;
            var pixelRatio = window.devicePixelRatio || 1;
            canvas.width = canvasSize * pixelRatio;
            canvas.height = canvasSize * pixelRatio;

            // Scale the context for high-quality rendering
            context.scale(pixelRatio, pixelRatio);

            context.fillStyle = colours[colourIndex];
            context.fillRect(0, 0, canvas.width, canvas.height);

            // Adjust font size and position
            context.font = "20px Arial";  // Adjust the font size as needed
            context.textAlign = "center";
            context.fillStyle = "#FFF";
            context.fillText(initials, canvas.width / 2, canvas.height / 1.5);
        }

    </script>
