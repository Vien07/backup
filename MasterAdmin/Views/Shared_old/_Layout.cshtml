    @*Menu active*@
    <script>
        $(document).ready(function () {
            // Get the current URL path
            var currentPath = window.location.pathname.replace("/s-admin", "");
            var arrCurrentPath = currentPath.split('/')
            var arrCurrentPathSelected = arrCurrentPath[1]
            // Find the corresponding menu item and mark it as active
            $(".menu a").each(function () {
                var menuItemUrl = $(this).attr("menu");
                if (menuItemUrl === arrCurrentPathSelected) {
                    // Check if the menu item has a submenu
                    if ($(this).closest("ul.submenu").length > 0) {
                        //$(this).closest("ul.submenu").addClass("active");
                        $(this).closest("ul.submenu").css("display", "block");
                        $(this).parents("li.sidebar-item").addClass("active");
                        $(this).parents("li.sidebar-item-child").removeClass("active");
                        $(this).parents("ul.submenu").css("display", "block");


                    } else {
                        // If the menu item does not have a submenu, add the "active" class to the parent li.has-sub element
                        $(this).closest("li.sidebar-item").addClass("active");
                    }
                }
            });
        });

    </script>

