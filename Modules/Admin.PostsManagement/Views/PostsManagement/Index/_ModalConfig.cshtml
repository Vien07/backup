@using ComponentUILibrary.Models;
@using Steam.Core.Common;

@using ConfigAdmin = Admin.PostsManagement.Constants.PostsManagementConstants.Config.Admin
@model List<ComponentUILibrary.ViewComponents.ConfigModel>
@using static Admin.PostsManagement.Constants.PostsManagementConstants

<div class="card">
    <div class="card-header">
        <ul class="nav nav-pills card-header-pills" role="tablist">
            <li class="nav-item" role="presentation">
                <button type="button" class="nav-link active" role="tab" data-bs-toggle="tab" data-bs-target="#navs-pills-within-card-adminconfig" aria-controls="navs-pills-within-card-active" aria-selected="true">Admin</button>
            </li>
            <li class="nav-item" role="presentation">
                <button type="button" class="nav-link" role="tab" data-bs-toggle="tab" data-bs-target="#navs-pills-within-card-websiteconfig" aria-controls="navs-pills-within-card-link" aria-selected="false" tabindex="-1">Website</button>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content p-0">
            <div class="tab-pane fade active show" id="navs-pills-within-card-adminconfig" role="tabpanel">
                <form id="Admin_PostsManagementConfig" class="form form-vertical mt-3">
                    <div class="form-body">
                        <div class="row">

                            <div class="col-12 row">

                                <label for="MaxHeight">Kích thước hình tối đa</label>

                                <div class="form-group col-5">
                                    <input data-toggle="tooltip" data-placement="top" title="MaxWidth" type="text"
                                           id="@Config.Admin.MaxWidth"
                                           value="@Model.GetConfigValue(Config.Admin.MaxWidth)"
                                           class="form-control" name="@Config.Admin.MaxWidth" placeholder="MaxWidth">
                                </div>
                                <div class="form-group col-5">
                                    <input data-toggle="tooltip" data-placement="top" title="MaxHeight"
                                           type="text"
                                           id="@Config.Admin.MaxHeight"
                                           value="@Model.GetConfigValue(Config.Admin.MaxHeight)"
                                           class="form-control" name="@Config.Admin.MaxHeight" placeholder="MaxHeight">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="PageSize">PageSize</label>
                                    <input data-toggle="tooltip" data-placement="top" title="PageSize" type="text" id="@Config.Admin.PageSize" class="form-control"
                                           value="@Model.GetConfigValue(Config.Admin.PageSize)"
                                           name="@Config.Admin.PageSize" placeholder="PageSize">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="Admin_">Loại tin tức</label>
                                    @{

                                        TagifyModel tagifyModel = new TagifyModel();
                                        tagifyModel.Id = ConfigAdmin.PostType;

                                        tagifyModel.FirstLoadLib = true;
                                        tagifyModel.Value = Model.GetConfigValue(Config.Admin.PostType);
                                    }
                                    @await Component.InvokeAsync(nameof(ComponentUILibrary.ViewComponents.TagifyComponent), tagifyModel)

                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-end mt-2">
                                <button type="button" onclick="_action.SaveConfig('Admin_PostsManagementConfig','Admin')" class="btn btn-primary me-1 mb-1">Cập nhật</button>
                                @*                                        <button type="reset" class="btn btn-light-secondary me-1 mb-1">Default</button>
                                *@
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="tab-pane fade" id="navs-pills-within-card-websiteconfig" role="tabpanel">
                <form id="Website_PostsManagementConfig" class=" mt-3 form form-vertical">
                    <div class="form-body">

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="PageSize">PageSize</label>
                                    <input data-toggle="tooltip" data-placement="top" title="PageSize" type="text" id="@Config.Website.PageSize" class="form-control" value="@Model.GetConfigValue(Config.Website.PageSize)" name="@Config.Website.PageSize" placeholder="PageSize">
                                </div>

                            </div>
                            <div class="col-12 d-flex mt-2 justify-content-end mt-2">
                                <button type="button" onclick="_action.SaveConfig('Website_PostsManagementConfig','Webiste')" class="btn btn-primary me-1 mb-1 ">Cập nhật</button>
                                @*                                        <button type="reset" class="btn btn-light-secondary me-1 mb-1">Default</button>
                                *@
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
