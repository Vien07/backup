@using X.PagedList
@model Admin.Collection.Models.Collection_Product_List
@using static Admin.Collection.Constants.CollectionConstants;
@{
    var CDN_HOST = "";
}

@if (Model != null && Model.ProductItems.Any())
{

    int stt = Model.PageNumber * Model.PageSize - Model.PageSize;
    foreach (var item in Model.ProductItems)
    {
        stt = stt + 1;
        <tr id="tr_tableChooseProduct_@item.Pid" class="">

            <td width="1"><input tabindex="@(item.Order+1000)"  type="number" class="form-control-sm order-input  form-control-plaintext" value="@stt" disabled /></td>
            <td class="">
                <div class="avatar avatar-xl rounded me-3">
                    <img style="border-radius:0px!important" src="@(item.ImagePath)" alt="" srcset="">
                </div>
            </td>
            <td class="text-bold-500">@item.Title</td>
            <td class="text-bold-500">@item.SKU</td>
            <td class="text-bold-500">@item.Price</td>
            <td class="text-center">
                <i onclick="_action.ChooseProduct(@item.Pid,'@item.SKU')" class="cursor-pointer  text-success fas fa-random"></i>
            </td>
  
        </tr>
    }
}
else
{
    <tr>
        <td colspan="6" class="text-center">
            <span>Không có dữ liệu!!</span>
        </td>

    </tr>
}
