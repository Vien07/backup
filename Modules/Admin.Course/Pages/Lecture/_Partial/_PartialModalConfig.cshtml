@using Admin.Course.Const;
<div class="modal right fade" id="SettingModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header ">
                <button onclick="_action.CloseSettingModal()" type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title justify-content-center " id="myModalLabel2">Cài đặt</h4>
            </div>

            <div class="modal-body">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="home-tab" data-bs-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Admin</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="profile-tab" data-bs-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Website</a>
                    </li>
                </ul>
                <form>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-12 row">
                                        <div class="form-group col-6">
                                            <label for="@StaticStringLecture.MinWidth">Min width</label>
                                            <input type="text" id="@StaticStringLecture.MinWidth" class="form-control" name="@StaticStringLecture.MinWidth" value="" placeholder="400" />
                                        </div>
                                        <div class="form-group col-6">
                                            <label for="@StaticStringLecture.MaxWidth">Max width</label>
                                            <input type="text" id="@StaticStringLecture.MaxWidth" class="form-control" name="@StaticStringLecture.MaxWidth" value="" placeholder="800" />
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="page-size">Page size</label>
                                            <input type="text" id="@StaticStringLecture.PageSizeAdmin" class="form-control" name="@StaticStringLecture.PageSizeAdmin" value="" placeholder="12" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade " id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="first-name-vertical">Tốc độ animation</label>
                                            <input type="text" id="first-name-vertical" class="form-control" name="fname" placeholder="PageSize">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="first-name-vertical">Kiểu animation</label>
                                            <input type="text" id="first-name-vertical" class="form-control" name="fname" placeholder="PageSize">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 d-flex justify-content-end">
                            <button type="button" onclick="_action.SaveSetting()" class="btn btn-primary me-1 mb-1">Apply</button>
                        </div>
                    </div>
                </form>
            </div>

        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div>