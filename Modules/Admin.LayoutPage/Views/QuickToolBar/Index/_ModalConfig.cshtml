@using ComponentUILibrary.Models;
@using Steam.Core.Common;

@using ConfigAdmin = Admin.LayoutPage.Constants.QuickToolBarConstants.Config.Admin
@model List<ComponentUILibrary.ViewComponents.ConfigModel>
@using static Admin.LayoutPage.Constants.QuickToolBarConstants

@using WebSiteConfig = Admin.LayoutPage.Constants.QuickToolBarConstants.Config.Website;
@using AdminConfig = Admin.LayoutPage.Constants.QuickToolBarConstants.Config.Admin;
<div class="card">
    <div class="card-header">
        <ul class="nav nav-pills card-header-pills" role="tablist">
            <li class="nav-item" role="presentation">
                <button type="button" class="nav-link active" role="tab" data-bs-toggle="tab" data-bs-target="#navs-pills-within-card-adminconfig" aria-controls="navs-pills-within-card-active" aria-selected="true">Admin</button>
            </li>
            <li class="nav-item" role="presentation">
                <button type="button" class="nav-link" role="tab" data-bs-toggle="tab" data-bs-target="#navs-pills-within-card-websiteconfig" aria-controls="navs-pills-within-card-link" aria-selected="false" tabindex="-1">Website</button>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content p-0">
            <div class="tab-pane fade active show" id="navs-pills-within-card-adminconfig" role="tabpanel">
                <form id="Admin_QuickToolBarConfig" class="form form-vertical mt-3">
                    <div class="form-body">
                        <div class="row">

                            <div class="col-12">
                                <div class="form-group">
                                    <label for="PageSize">PageSize</label>
                                    <input data-toggle="tooltip" data-placement="top" title="PageSize" type="text" id="@Config.Admin.PageSize" class="form-control" value="@(Model.Where(p=>p.Key == Config.Admin.PageSize).FirstOrDefault() !=null?Model.Where(p=>p.Key == Config.Admin.PageSize).FirstOrDefault().Value:"")" name="@Config.Admin.PageSize" placeholder="PageSize">
                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-end">
                                <button type="button" onclick="_action.SaveConfig('Admin_QuickToolBarConfig','Admin')" class="btn btn-primary me-1 mb-1">Apply</button>
                                @*                                        <button type="reset" class="btn btn-light-secondary me-1 mb-1">Default</button>
                                *@
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="tab-pane fade" id="navs-pills-within-card-websiteconfig" role="tabpanel">
                <form id="Website_QuickToolBarConfig" class=" mt-3 form form-vertical">
                    <div class="form-body">

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="ApiUpdateQuickToolBar">Api cập nhật QuickToolBar</label>
                                    <input data-toggle="tooltip" data-placement="top" title="ApiUpdateQuickToolBar" type="text"
                                           id="@Config.Website.ApiUpdateQuickToolBar" class="form-control"
                                           value="@Model.GetConfigValue(Config.Website.ApiUpdateQuickToolBar)"
                                           name="@Config.Website.ApiUpdateQuickToolBar"
                                           placeholder="">
                                </div>
                                <div class="form-group">
                                    <label for="ApiUpdatePreviewQuickToolBar">Api cập nhật preview QuickToolBar</label>
                                    <input data-toggle="tooltip" data-placement="top" title="ApiUpdatePreviewQuickToolBar" type="text"
                                           id="@Config.Website.ApiUpdatePreviewQuickToolBar" class="form-control"
                                           value="@Model.GetConfigValue(Config.Website.ApiUpdatePreviewQuickToolBar)"
                                           name="@Config.Website.ApiUpdatePreviewQuickToolBar"
                                           placeholder="">
                                </div>
                                <div class="form-group">
                                    <label for="ApiRevertQuickToolBar">Api khôi phục QuickToolBar</label>
                                    <input data-toggle="tooltip"
                                           data-placement="top"
                                           title="ApiRevertQuickToolBar" type="text"
                                           id="@Config.Website.ApiRevertQuickToolBar" class="form-control"
                                           value="@Model.GetConfigValue(Config.Website.ApiRevertQuickToolBar)"
                                           name="@Config.Website.ApiRevertQuickToolBar" placeholder="">
                                </div>
                                <div class="form-group">
                                    <label for="ApiPreviewPage">Api Preview Page</label>
                                    <input data-toggle="tooltip"
                                           data-placement="top"
                                           title="ApiPreviewPage" type="text"
                                           id="@WebSiteConfig.ApiPreviewPage" class="form-control"
                                           value="@Model.GetConfigValue(Config.Website.ApiPreviewPage)"
                                           name="@WebSiteConfig.ApiPreviewPage" placeholder="">
                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-end">
                                <button type="button" onclick="_action.SaveConfig('Website_QuickToolBarConfig','Webiste')" class="btn btn-primary me-1 mb-1">Apply</button>
                                @*                                        <button type="reset" class="btn btn-light-secondary me-1 mb-1">Default</button>
                                *@
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


