@using X.PagedList
@using Admin.LayoutPage.Constants
@{
    var CDN_HOST = "";
}

@model List<Admin.LayoutPage.Database.SliderItem>;
@if (Model != null && Model.Any())
{

    int stt = 0;
    foreach (var item in Model)
    {
        stt = stt + 1;
        <tr id="@item.Pid">


            <td width="1"><input tabindex="@(item.Order+1000)" onchange="_action.UpdateOrderChild(@item.Pid,this.value)" type="number" class="form-control-sm order-input  form-control-plaintext" value="@stt" disabled /></td>
            <td class="">
                <div class="avatar avatar-xl rounded me-3">
                    <img style="border-radius:0px!important" src="@(item.FilePath+item.Images)" alt="" srcset="">
                </div>
            </td>
            <td><span onclick="_action.EditChild(@item.Pid)" class="cursor-pointer  @(item.Enabled==true?"text-primary":"text-mute") ">@item.Title</span></td>
            <td class="text-bold-500">@Html.Raw(item.Description)</td>

            <td class="text-center">
               <i onclick="_action.EditChild(@item.Pid)" class="cursor-pointer text-primary fas fa-edit"></i>
                <i onclick="_action.DeleteChild(@item.Pid,@item.SliderPid)" class="cursor-pointer  text-danger fas fa-trash-alt"></i>

            </td>
            <td class="handle td-handle">
                <i class="fas fa-grip-horizontal fa-rotate-90"></i>

            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="4" class="text-center">
            <span>Không có dữ liệu!!</span>
        </td>

    </tr>
}
