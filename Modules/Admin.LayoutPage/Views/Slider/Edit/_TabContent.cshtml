@model Admin.LayoutPage.Controllers.SliderEditModel

@using Admin.LayoutPage.Constants;
@using ComponentUILibrary.Models

<div class="card-content p-lg-2 pr-2">
    <form id="uploadForm" class="mt-2">

        <div class="mt-2">
            <input hidden id="SliderPid" class="pid" name="Pid" value="@Model.Detail.Pid">
            <div class="form-group">
                <label for="title">Tiêu đề</label>
                <input required type="text" class="form-control" id="title" value="@Model.Detail.Name" name="Name" aria-describedby="Name" placeholder="nhập tên slider...">
            </div>



 

            <div class="form-group">
                <label for="ItemBlock">Slider Item Block</label>

                @{

                    CodeMirrorModel codeMirrorSliderBlock = new CodeMirrorModel();
                    codeMirrorSliderBlock.Id = "SliderBlock";
                    codeMirrorSliderBlock.FirstLoadLib = true;
                    codeMirrorSliderBlock.Content = Model.Detail.SliderBlock;
                }
                @await Component.InvokeAsync(nameof(ComponentUILibrary.ViewComponents.CodeMirrorComponent), codeMirrorSliderBlock)
            </div>
        </div>
    </form>
    <div class="modal-footer">
        @*<a type="button" href="@SliderConstants.Config.Route.PageIndex" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</a>
            <button type="button" onclick="_action.Save('uploadForm')" class="btn btn-primary">Lưu</button>*@
    </div>
</div>