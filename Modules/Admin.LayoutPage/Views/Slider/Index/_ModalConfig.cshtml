@using ComponentUILibrary.Models;
@using Steam.Core.Common;

@using ConfigAdmin = Admin.LayoutPage.Constants.SliderConstants.Config.Admin
@model List<ComponentUILibrary.ViewComponents.ConfigModel>
@using static Admin.LayoutPage.Constants.SliderConstants


@using WebSiteConfig = Admin.LayoutPage.Constants.SliderConstants.Config.Website;
@using AdminConfig = Admin.LayoutPage.Constants.SliderConstants.Config.Admin;
<div class="card">
    <div class="card-header">
        <ul class="nav nav-pills card-header-pills" role="tablist">
            <li class="nav-item" role="presentation">
                <button type="button" class="nav-link active" role="tab" data-bs-toggle="tab" data-bs-target="#navs-pills-within-card-adminconfig" aria-controls="navs-pills-within-card-active" aria-selected="true">Admin</button>
            </li>
            <li class="nav-item" role="presentation">
                <button type="button" class="nav-link" role="tab" data-bs-toggle="tab" data-bs-target="#navs-pills-within-card-websiteconfig" aria-controls="navs-pills-within-card-link" aria-selected="false" tabindex="-1">Website</button>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content p-0">
            <div class="tab-pane fade active show" id="navs-pills-within-card-adminconfig" role="tabpanel">
                <form id="Admin_SliderConfig" class="form form-vertical mt-3">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-12 row">
                                <label for="MaxHeight">Kích thước hình tối đa</label>

                                <div class="form-group col-5">
                                    <input data-toggle="tooltip" data-placement="top" title="MaxWidth" type="text" id="@Config.Admin.MaxWidth" value="@(Model.Where(p=>p.Key == Config.Admin.MaxWidth).FirstOrDefault() !=null?Model.Where(p=>p.Key == Config.Admin.MaxWidth).FirstOrDefault().Value:"")" class="form-control" name="@Config.Admin.MaxWidth" placeholder="MaxWidth">
                                </div>
                                <div class="form-group col-5">
                                    <input data-toggle="tooltip" data-placement="top" title="MaxHeight" type="text" id="@Config.Admin.MaxHeight" value="@(Model.Where(p=>p.Key == Config.Admin.MaxHeight).FirstOrDefault() !=null?Model.Where(p=>p.Key == Config.Admin.MaxHeight).FirstOrDefault().Value:"")" class="form-control" name="@Config.Admin.MaxHeight" placeholder="MaxHeight">
                                </div>
                            </div>
                            <div class="col-12 row">
                                <label for="ThumbHeight">Kích thước hình Thumb</label>

                                <div class="form-group col-6">
                                    <input data-toggle="tooltip" data-placement="top" title="ThumbHeight" type="text" id="@Config.Admin.ThumbHeight" value="@(Model.Where(p=>p.Key == Config.Admin.ThumbHeight).FirstOrDefault() !=null?Model.Where(p=>p.Key == Config.Admin.ThumbHeight).FirstOrDefault().Value:"")" class="form-control" name="@Config.Admin.ThumbHeight" placeholder="ThumbHeight">
                                </div>
                                <div class="form-group col-6">
                                    <input data-toggle="tooltip" data-placement="top" title="ThumbWidth" type="text" id="@Config.Admin.ThumbWidth" class="form-control" value="@(Model.Where(p=>p.Key == Config.Admin.ThumbWidth).FirstOrDefault() !=null?Model.Where(p=>p.Key == Config.Admin.ThumbWidth).FirstOrDefault().Value:"")" name="@Config.Admin.ThumbWidth" placeholder="ThumbWidth">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="PageSize">PageSize</label>
                                    <input data-toggle="tooltip" data-placement="top" title="PageSize" type="text" id="@Config.Admin.PageSize" class="form-control" value="@(Model.Where(p=>p.Key == Config.Admin.PageSize).FirstOrDefault() !=null?Model.Where(p=>p.Key == Config.Admin.PageSize).FirstOrDefault().Value:"")" name="@Config.Admin.PageSize" placeholder="PageSize">
                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-end mt-2">
                                <button type="button" onclick="_action.SaveConfig('Admin_SliderConfig','Admin')" class="btn btn-primary me-1 mb-1">Apply</button>
                                @*                                        <button type="reset" class="btn btn-light-secondary me-1 mb-1">Default</button>
                                *@
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="tab-pane fade" id="navs-pills-within-card-websiteconfig" role="tabpanel">
                <form id="Website_SliderConfig" class=" mt-3 form form-vertical">
                    <div class="form-body">

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="ApiUpdateSlider">Api cập nhật Slider</label>
                                    <input data-toggle="tooltip" data-placement="top" title="ApiUpdateSlider" type="text"
                                           id="@Config.Website.ApiUpdateSlider" class="form-control"
                                           value="@(Model.Where(p=>p.Key == Config.Website.ApiUpdateSlider).FirstOrDefault() !=null?Model.Where(p=>p.Key ==  Config.Website.ApiUpdateSlider).FirstOrDefault().Value:"")"
                                           name="@Config.Website.ApiUpdateSlider"
                                           placeholder="">
                                </div>
                                <div class="form-group">
                                    <label for="ApiUpdatePreviewSlider">Api cập nhật preview Slider</label>
                                    <input data-toggle="tooltip" data-placement="top" title="ApiUpdatePreviewSlider" type="text"
                                           id="@Config.Website.ApiUpdatePreviewSlider" class="form-control"
                                           value="@Model.GetConfigValue(Config.Website.ApiUpdatePreviewSlider)"
                                           name="@Config.Website.ApiUpdatePreviewSlider"
                                           placeholder="">
                                </div>
                                <div class="form-group">
                                    <label for="ApiRevertSlider">Api khôi phục Slider</label>
                                    <input data-toggle="tooltip"
                                           data-placement="top"
                                           title="ApiRevertSlider" type="text"
                                           id="@Config.Website.ApiRevertSlider" class="form-control"
                                           value="@(Model.Where(p=>p.Key == Config.Website.ApiRevertSlider).FirstOrDefault() !=null?Model.Where(p=>p.Key == Config.Website.ApiRevertSlider).FirstOrDefault().Value:"")"
                                           name="@Config.Website.ApiRevertSlider" placeholder="">
                                </div>
                                <div class="form-group">
                                    <label for="ApiPreviewPage">Api Preview Page</label>
                                    <input data-toggle="tooltip"
                                           data-placement="top"
                                           title="ApiPreviewPage" type="text"
                                           id="@WebSiteConfig.ApiPreviewPage" class="form-control"
                                           value="@Model.GetConfigValue(WebSiteConfig.ApiPreviewPage)"
                                           name="@WebSiteConfig.ApiPreviewPage" placeholder="">
                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-end mt-2">
                                <button type="button" onclick="_action.SaveConfig('Website_SliderConfig','Webiste')" class="btn btn-primary me-1 mb-1">Apply</button>
                                @*                                        <button type="reset" class="btn btn-light-secondary me-1 mb-1">Default</button>
                                *@
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

