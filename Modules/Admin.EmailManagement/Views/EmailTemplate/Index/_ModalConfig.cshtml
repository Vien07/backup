@using Admin.EmailManagement.Constants;
@model List<ComponentUILibrary.ViewComponents.ConfigModel>;
<div class="card">
    <div class="card-header">
        <ul class="nav nav-pills card-header-pills" role="tablist">
            <li class="nav-item" role="presentation">
                <button type="button" class="nav-link active" role="tab" data-bs-toggle="tab" data-bs-target="#navs-pills-within-card-adminconfig" aria-controls="navs-pills-within-card-active" aria-selected="true">Admin</button>
            </li>
            <li class="nav-item" role="presentation">
                <button type="button" class="nav-link" role="tab" data-bs-toggle="tab" data-bs-target="#navs-pills-within-card-websiteconfig" aria-controls="navs-pills-within-card-link" aria-selected="false" tabindex="-1">Website</button>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content p-0">
            <div class="tab-pane fade active show" id="navs-pills-within-card-adminconfig" role="tabpanel">
                <form id="Admin_EmailConfig" class="form form-vertical mt-3">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-12 row">
                                <label for="MaxHeight">Kích thước hình tối đa</label>

                                <div class="form-group col-5">
                                    <input data-toggle="tooltip" data-placement="top" title="MaxWidth" type="text" id="@EmailMailBoxConstants.Config.Admin.MaxWidth" value="@(Model.Where(p=>p.Key == EmailMailBoxConstants.Config.Admin.MaxWidth).FirstOrDefault() !=null?Model.Where(p=>p.Key == EmailMailBoxConstants.Config.Admin.MaxWidth).FirstOrDefault().Value:"")" class="form-control" name="@EmailMailBoxConstants.Config.Admin.MaxWidth" placeholder="MaxWidth">
                                </div>
                                <div class="form-group col-5">
                                    <input data-toggle="tooltip" data-placement="top" title="MaxHeight" type="text" id="@EmailMailBoxConstants.Config.Admin.MaxHeight" value="@(Model.Where(p=>p.Key == EmailMailBoxConstants.Config.Admin.MaxHeight).FirstOrDefault() !=null?Model.Where(p=>p.Key == EmailMailBoxConstants.Config.Admin.MaxHeight).FirstOrDefault().Value:"")" class="form-control" name="@EmailMailBoxConstants.Config.Admin.MaxHeight" placeholder="MaxHeight">
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label for="PageSize">PageSize</label>
                                    <input data-toggle="tooltip" data-placement="top" title="PageSize" type="text" id="@EmailMailBoxConstants.Config.Admin.PageSize" class="form-control" value="@(Model.Where(p=>p.Key == EmailMailBoxConstants.Config.Admin.PageSize).FirstOrDefault() !=null?Model.Where(p=>p.Key == EmailMailBoxConstants.Config.Admin.PageSize).FirstOrDefault().Value:"")" name="@EmailMailBoxConstants.Config.Admin.PageSize" placeholder="PageSize">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="Config1">Thêm config</label>
                                    <input data-toggle="tooltip" data-placement="top" title="Config1" type="text" id="@EmailMailBoxConstants.Config.Admin.Config1" class="form-control" value="@(Model.Where(p=>p.Key == EmailMailBoxConstants.Config.Admin.Config1).FirstOrDefault() !=null?Model.Where(p=>p.Key == EmailMailBoxConstants.Config.Admin.Config1).FirstOrDefault().Value:"")" name="@EmailMailBoxConstants.Config.Admin.Config1" placeholder="Config1">
                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-end mt-2">
                                <button type="button" onclick="_action.SaveConfig('Admin_EmailConfig','Admin')" class="btn btn-primary me-1 mb-1">Apply</button>
                                @*                                        <button type="reset" class="btn btn-light-secondary me-1 mb-1">Default</button>
                                *@
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="tab-pane fade" id="navs-pills-within-card-websiteconfig" role="tabpanel">

            </div>
        </div>
    </div>
</div>
