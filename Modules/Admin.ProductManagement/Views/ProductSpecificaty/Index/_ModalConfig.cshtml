@using Admin.ProductManagement.Constants;
@using Admin.ProductManagement.DataTransferObjects.ProductSpecificaty;
@model List<ProductSpecificatyConfigDto>;

@functions {
    public string getValue(string key)
    {
        var model = Model.Where(x => x.Key.Equals(key)).FirstOrDefault();
        if (model != null)
        {
            return model.Value;
        }
        return "";
    }
}
<div id="template-customizer" class="invert-bg-white " style="visibility: visible;">
