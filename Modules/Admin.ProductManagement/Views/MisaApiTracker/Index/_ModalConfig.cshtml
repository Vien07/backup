                                                       name="@MisaApiTrackerConstants.Environment" />
                                            </div>
                                        </div>

                                        <div class="col-12 d-flex justify-content-end mt-2">
                                            <button type="button" onclick="_action.GenerateAccessToken()" class="btn btn-success me-1 mb-1">Generate access token</button>
                                            <button type="button" onclick="_action.SaveConfig('Website_MisaApiConfig','Admin')" class="btn btn-primary me-1 mb-1">Apply</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="navs-pills-within-card-websiteconfig" role="tabpanel">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="@MisaApiTrackerConstants.PageSize">Page size</label>
