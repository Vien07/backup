@using Steam.Core.LocalizeManagement.Constants;
@using Steam.Core.LocalizeManagement.Models;
@using ComponentUILibrary.Models
@model LocalizeCultureDetail

<form id="uploadForm" class="mt-2">

    <div class="mt-2">
        <input hidden id="Pid" class="pid" name="Pid" value="@Model.Detail.Pid">
        <div class="row">
            @if (Model.Detail.Pid <= 0)
            {
                <div class="form-group col-md-6 col-sm-12">
                    <label for="LangCodeID">Ngôn ngữ</label>
                    @{
                        var listLangCode = LangItemConstants.DefaultList;
                        var selectData = new List<SelectControlData>();
                        var i = 0;
                        foreach (var item in listLangCode)
                        {
                            SelectControlData newData = new SelectControlData
                            {
                                Name = item.Name,
                                Value = item.LanguageCode,
                                Order = ++i,
                            };
                            selectData.Add(newData);
                        }
                        NiceSelectModel selectModel = new NiceSelectModel();
                        selectModel.Data = selectData;
                        selectModel.Id = "LangCodeID";
                        selectModel.Search = 1;
                        selectModel.Size = "small";
                        selectModel.Class = "form-group col-md-3 col-sm-12 nice-select sample-nice-select overflow-y";
                        selectModel.IsRequire = true;
                        selectModel.DefaultValue = "0";
                        selectModel.DefaultText = "--Kiểu menu--";
                        selectModel.SelectedValue = Model.Detail.LangCode;
                    }
                    @await Component.InvokeAsync(nameof(ComponentUILibrary.ViewComponents.Select2Component), new { model = selectModel })
                </div>
            }
            else
            {
                <div class="form-group col-auto">
                    <label for="Name">Ngôn ngữ</label>
                    <input  type="text" class="form-control" id="Name" value="@Model.Detail.LangCode" name="Name" aria-describedby="Name" disabled>
                </div>
            }
            <div class="form-group col-auto">
                <label for="SlugKey">Slug</label>
                <input required type="text" class="form-control" id="SlugKey" value="@Model.Detail.SlugKey" name="SlugKey" aria-describedby="SlugKey" placeholder="nhập slug key...">
            </div>
        </div>
    </div>
</form>