            try {
                existingFiles_@(Model.Id)  = JSON.parse(listFile);

            } catch (e) {
                existingFiles_@(Model.Id).push(listFile);
            }
            for (let i = 0; i < existingFiles_@(Model.Id).length; i++) {
                const uniqueID = generateUniqueID();
                //var mockFile = { name: existingFiles_@(Model.Id)[i],dataURL:'@FileManagerHost'+ "/FileStorage/Storage/" + existingFiles_@(Model.Id)[i] };
                var mockFile = { name: "banner2.jpg", size: 12345, uuid: "085b2b23-70e7-4175-8355-89937d8d46f2" };

                 moduleDropzone_@(Model.Id).options.addedfile.call( moduleDropzone_@(Model.Id), mockFile);

                moduleDropzone_@(Model.Id).options.thumbnail.call(moduleDropzone_@(Model.Id), mockFile, "https://localhost:60237/FileStorage/Storage/PostsManagement/img/test-a-_20231128224210.png");

               // moduleDropzone_@(Model.Id).displayExistingFile(mockFile);
                moduleDropzone_@(Model.Id).emit("addedfile", mockFile);
                moduleDropzone_@(Model.Id).emit("complete", mockFile);
                moduleDropzone_@(Model.Id).files.push(mockFile);

                mockFile["upload"] = { uuid: uniqueID }
        mockFile["status"] ="server";
        var tempInfo = {
            id: uniqueID,
            caption: "",
            description: "",
            order: "",
            alt: "",
            dataUrl:'@FileManagerHost'+ "/FileStorage/Storage/" + existingFiles_@(Model.Id)[i],
            name: getFileName(existingFiles_@(Model.Id)[i]),
            status: "server"
        }
        listImagesInfo_@(Model.Id).push(tempInfo);
        $("#ListFiles").val(JSON.stringify(listImagesInfo_@(Model.Id)))
    }


        } catch (e) {

        }

    }
    function generateUniqueID() {
        const timestamp = new Date().getTime(); // Get current timestamp
        const randomChars = Math.random().toString(36).substring(2, 10); // Generate random characters

        const uniqueID = `${timestamp}-${randomChars}`;
        return uniqueID;
    }
    function getFileName(filePath) {
        const parts = filePath.split('/');
        const fileName = parts[parts.length - 1];
        return fileName;
    }

</script>