@using ComponentUILibrary.Models
@using System.Text.Json;
@using ComponentUILibrary
@using Microsoft.Extensions.Configuration;

@model DropzoneModel
@{
    string VirtualFolder = "";
    string FileManagerHost = "";
    string AccessKey = "";
    try
    {
        IConfiguration conf = (new ConfigurationBuilder().SetBasePath(Directory.GetCurrentDirectory()).AddJsonFile("appsettings.json").Build());
        VirtualFolder = conf["SystemConfig:VirtualFolder"].ToString();
        FileManagerHost = conf["FileManager:FileManagerHost"].ToString();
        AccessKey = conf["FileManager:access_keys"].ToString();
    }
    catch (Exception ex)
    {

    }
}

@{
