<div class="row">
    <div class="col-10 col-md-11 col-sm-10">
        <div class=" needsclick dropzone" id="@Model.Id">
            <div class="dz-message needsclick">
                Drop files here or click to upload.<BR>
            </div>
        </div>
    </div>
    <div class="col-2 col-md-1 col-sm-2 ">
        <a href="@FileManagerHost/filemanager/dialog.php?type=1&amp;field_id=@(Model.Id)_imageFromServerMulti&amp;relative_url=1&amp;akey=@AccessKey&amp;crossdomain=1&amp;multiple=1filemanager/dialog.php" class="@(Model.Id)-iframe-btn">

